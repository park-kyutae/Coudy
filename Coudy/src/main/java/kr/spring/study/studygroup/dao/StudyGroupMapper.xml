<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.spring.study.studygroup.dao.StudyGroupMapper">
    <select id="selectRowCount" parameterType="map"
            resultType="integer">
        SELECT
        COUNT(*)
        FROM studygroup s JOIN spmember m
        ON s.mem_num = m.mem_num
        <where>
            <if test="keyword != null and keyword != ''">
                <if test="keyfield == 1">
                    s.title LIKE '%' || #{keyword} || '%'
                </if>
                <if test="keyfield == 2">
                    m.id LIKE '%' || #{keyword} || '%' OR
                    m.nick_name LIKE '%' || #{keyword} || '%'
                </if>
                <if test="keyfield == 3">
                    s.content LIKE '%' || #{keyword} || '%'
                </if>
                <if test="keyfield == 4">
                    s.title LIKE '%' || #{keyword} || '%' OR
                    s.content LIKE '%' || #{keyword} || '%'
                </if>
            </if>
        </where>
    </select>
</mapper>







